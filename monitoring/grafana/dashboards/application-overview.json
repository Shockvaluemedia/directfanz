{
  "dashboard": {
    "id": null,
    "title": "DirectFanz - Application Overview",
    "tags": ["directfanz", "overview"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "System Health Status",
        "type": "stat",
        "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "direct_fan_platform_database_connection",
            "legendFormat": "Database",
            "refId": "A"
          },
          {
            "expr": "direct_fan_platform_redis_connection",
            "legendFormat": "Redis",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            },
            "unit": "none",
            "min": 0,
            "max": 1
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center",
          "orientation": "horizontal"
        }
      },
      {
        "id": 2,
        "title": "HTTP Request Rate",
        "type": "graph",
        "gridPos": { "h": 6, "w": 12, "x": 6, "y": 0 },
        "targets": [
          {
            "expr": "rate(http_request_total[5m])",
            "legendFormat": "{{method}} {{status}}",
            "refId": "A"
          }
        ],
        "xAxis": {
          "show": true
        },
        "yAxes": [
          {
            "unit": "reqps",
            "min": 0
          }
        ]
      },
      {
        "id": 3,
        "title": "Response Time Percentiles",
        "type": "graph",
        "gridPos": { "h": 6, "w": 6, "x": 18, "y": 0 },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_ms_bucket[5m]))",
            "legendFormat": "50th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_ms_bucket[5m]))",
            "legendFormat": "95th percentile",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_ms_bucket[5m]))",
            "legendFormat": "99th percentile",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "unit": "ms",
            "min": 0
          }
        ]
      },
      {
        "id": 4,
        "title": "Active Users",
        "type": "stat",
        "gridPos": { "h": 4, "w": 4, "x": 0, "y": 6 },
        "targets": [
          {
            "expr": "direct_fan_platform_users_total",
            "legendFormat": "Total Users",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 5,
        "title": "Active Artists",
        "type": "stat",
        "gridPos": { "h": 4, "w": 4, "x": 4, "y": 6 },
        "targets": [
          {
            "expr": "direct_fan_platform_artists_total",
            "legendFormat": "Total Artists",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 6,
        "title": "Active Subscriptions",
        "type": "stat",
        "gridPos": { "h": 4, "w": 4, "x": 8, "y": 6 },
        "targets": [
          {
            "expr": "direct_fan_platform_active_subscriptions_total",
            "legendFormat": "Active Subscriptions",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 7,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": { "h": 4, "w": 12, "x": 12, "y": 6 },
        "targets": [
          {
            "expr": "rate(http_request_total{status=~\"4..|5..\"}[5m]) / rate(http_request_total[5m])",
            "legendFormat": "Error Rate %",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "unit": "percentunit",
            "min": 0,
            "max": 1
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [0.05],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "5m",
          "frequency": "10s",
          "handler": 1,
          "name": "High Error Rate Alert",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 8,
        "title": "Database Performance",
        "type": "graph",
        "gridPos": { "h": 6, "w": 12, "x": 0, "y": 10 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(database_operation_duration_ms_bucket[5m]))",
            "legendFormat": "{{operation}} - 95th percentile",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "unit": "ms",
            "min": 0
          }
        ]
      },
      {
        "id": 9,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": { "h": 6, "w": 12, "x": 12, "y": 10 },
        "targets": [
          {
            "expr": "nodejs_memory_usage_bytes{type=\"heap_used\"}",
            "legendFormat": "Heap Used",
            "refId": "A"
          },
          {
            "expr": "nodejs_memory_usage_bytes{type=\"heap_total\"}",
            "legendFormat": "Heap Total",
            "refId": "B"
          },
          {
            "expr": "nodejs_memory_usage_bytes{type=\"rss\"}",
            "legendFormat": "RSS",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "unit": "bytes",
            "min": 0
          }
        ]
      },
      {
        "id": 10,
        "title": "Business Events",
        "type": "graph",
        "gridPos": { "h": 6, "w": 24, "x": 0, "y": 16 },
        "targets": [
          {
            "expr": "rate(business_events_total[5m])",
            "legendFormat": "{{operation}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "unit": "ops",
            "min": 0
          }
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up, instance)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "enable": true,
          "iconColor": "green",
          "query": "ALERTS{alertname=\"DeploymentStarted\"}"
        }
      ]
    }
  }
}
